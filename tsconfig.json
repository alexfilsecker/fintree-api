{
  "compilerOptions": {
    "target": "es5", // Set the target JavaScript version (e.g., es2015, esnext)
    "module": "commonjs", // Specify the module system (e.g., commonjs, amd, system)
    "strict": true, // Enable strict type checking
    "noImplicitAny": true, // Disallow implicit 'any' type
    "esModuleInterop": true, // Enable ES module interop for TypeScript 2.5+
    "sourceMap": true, // Generate source maps for debugging
    "outDir": "dist", // Output directory for compiled JavaScript
    "baseUrl": "src", // Base directory for resolving non-relative modules
    "allowJs": true // Allow compilation of JavaScript files (optional)
  },
  "include": ["src/**/*.ts"], // Include all TypeScript files in the 'src' directory
  "exclude": ["node_modules"] // Exclude the 'node_modules' folder
}
